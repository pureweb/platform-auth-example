extends layout

block layout-content
  div.View.UserView
    h1.Banner Howdy, #{userProfile.nickname}!
    div.Message
      div.Title
        h1 User Profile
        p.Description This is the user profile information generated by Auth0 after a user successfully authenticates with your application. Use this information to build out your interactive experience and customize it for each user. For more information, refer to the Auth0 documentation: 
        a(href="https://auth0.com/docs/users/user-profile-structure") Auth0 User Profile Structure
      pre.Details=JSON.stringify(userProfile, null, 2)
    div.NavButtons
      a(href="/")
        div.NavButton Home
      a(href="/logout")
        div.NavButton Log out
